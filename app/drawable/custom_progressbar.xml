<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="140">

    <item>

        <shape
            android:innerRadiusRatio="4"
            android:shape="ring"
            android:useLevel="false"
            android:thicknessRatio="5.0"
            android:type="sweep"
            android:angle="0"
            >
            <solid
                android:color="@color/FaintFaint"
                />
        </shape>

    </item>

    <item
        android:id="@+id/progress">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90">

            <shape
                android:innerRadiusRatio="4"
                android:shape="ring"
                android:thicknessRatio="5.0"
                android:angle="0"
                android:type="sweep"
                >
                <solid
                    android:color="@color/MediumBlue"
                    />
            </shape>
        </rotate>
    </item>
</layer-list>