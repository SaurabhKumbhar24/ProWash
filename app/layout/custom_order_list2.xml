<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_id"
            android:textColor="@color/Black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_type"
            android:textColor="@color/Black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pickup_date"
            android:textColor="@color/Black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pickup_time"
            android:textColor="@color/Black"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/OrderIdtab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#494u20"
            android:textColor="@color/MediumBlue"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/OrderTypetab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wash And Iron"
            android:textColor="@color/MediumBlue"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/Pickupdatetab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16/12/2018"
            android:textColor="@color/MediumBlue"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/Pickuptimetab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2pm to 4pm"
            android:textColor="@color/MediumBlue"
            android:textSize="15sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/DisplayOnMap"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="right"
        android:background="@drawable/ic_map_client"
        android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/AcceptPickup"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MediumBlue"
        android:textColor="@color/White"
        android:text="@string/out_for_pickup"
        />

</LinearLayout>