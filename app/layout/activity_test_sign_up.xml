<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginAndSignUp.TestSignUp"
    >

    <TextView
        android:id="@+id/TSUToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/MediumBlue"
        style="@style/ThemeOverlay.AppCompat.ActionBar"
        android:text="@string/register"
        android:gravity="center"
        android:elevation="10dp"
        android:textSize="25sp"
        android:fontFamily="@font/segoeuib"
        android:textColor="@color/White"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/FullNameRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter full name"
            android:fontFamily="@font/segoeui"
            android:paddingStart="20dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginTop="50dp"
            android:paddingEnd="0dp"
            android:background="@drawable/ic_curvecorner_edittext"/>

        <EditText
            android:id="@+id/EmailIdRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="example@mail.com"
            android:paddingStart="20dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:fontFamily="@font/segoeui"
            android:background="@drawable/ic_curvecorner_edittext"/>

        <EditText
            android:id="@+id/PasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:hint="@string/Passwordinput"
            android:fontFamily="@font/segoeui"
            android:background="@drawable/ic_curvecorner_edittext"/>

        <EditText
            android:id="@+id/ConfirmPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:hint="@string/ConfirmPassword"
            android:fontFamily="@font/segoeui"
            android:background="@drawable/ic_curvecorner_edittext"/>

        <Button
            android:id="@+id/CreateAccountBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/curvecornerbutton"
            android:text="@string/CreateAccount"
            android:textColor="@color/White"
            android:fontFamily="@font/segoeui"/>
    </LinearLayout>

</LinearLayout>