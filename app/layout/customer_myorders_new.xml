<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/OrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_success"
            />

        <TextView
            android:id="@+id/toSetPlacedDateAndTime"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="0dp"
            android:textColor="@color/MediumBlue"
            />

        <TextView
            android:id="@+id/OrderIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/MediumBlue"
            android:paddingStart="30dp"
            android:paddingEnd="0dp"
            android:textSize="15sp"
            />
    </LinearLayout>

        <Button
            android:id="@+id/ViewOrderDetails"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAllCaps="false"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:contentDescription="@string/track_order"
            android:text="@string/track_order"
            android:textColor="@color/Black" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/Grey"
        />

    <TextView
        android:id="@+id/toSetOrderType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/Black"
        android:drawableStart="@drawable/ic_hangingcloth"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/Grey"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/ViewReceipt"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:text="@string/view_receipt"
            android:contentDescription="@string/bill"
            android:background="@color/MediumBlue"
            android:textColor="@color/Black"
            style="?android:attr/buttonBarStyle"
            />
        <Button
            android:id="@+id/GetHelp"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/get_help"
            android:contentDescription="@string/help"
            android:textColor="@color/Black"
            style="?android:attr/buttonBarStyle"
            android:background="@color/FaintBlue"/>
    </LinearLayout>
</LinearLayout>
